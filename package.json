{
  "name": "mapstruct-generator",
  "displayName": "MapStruct Generator",
  "description": "An agent to help generate MapStruct mappers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mapstruct-generator.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mapstruct-generator.start",
        "title": "MapStruct: Generar Mapper desde DTO/DAO"
      },
      {
        "command": "mapstruct-generator.mapFromProject",
        "title": "Mapear desde proyecto",
        "icon": "$(file-directory)"
      },
      {
        "command": "mapstruct-generator.mapFromPreview",
        "title": "Mapear con Preview URL",
        "icon": "$(globe)",
        "enablement": "false"
      },
      {
        "command": "mapstruct-generator.mapFromImages",
        "title": "Mapear con imÃ¡genes",
        "icon": "$(file-media)",
        "enablement": "false"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mapstruct-container",
          "title": "MapStruct Generator",
          "icon": "$(arrow-swap)"
        }
      ]
    },
    "views": {
      "mapstruct-container": [
        {
          "id": "mapstruct-sidebar",
          "name": "Opciones de Mapeo",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0"
  }
}
